generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum RsvpStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String   // "Espinosa Family"
  members   User[]
  createdAt DateTime @default(now())
}


model User {
  id           Int      @id @default(autoincrement())
  firstName    String
  lastName     String

  // Optional group membership
  groupId      Int?
  group        Group?   @relation(fields: [groupId], references: [id])

  // RSVP info
  rsvpStatus   RsvpStatus @default(PENDING)
  dietaryRestrictions String?

  // Plus-one rules
  canBringPlusOne Boolean  @default(false)

  // Actual plus-one guest (if they RSVP yes + bring someone)
  plusOne      PlusOne?

  createdAt    DateTime @default(now())
}

model PlusOne {
  id        Int    @id @default(autoincrement())
  name      String?   // Optional until they fill it in
  userId    Int     @unique
  user      User    @relation(fields: [userId], references: [id])
}
